.chat-side
  .side-header
    .side-header__name
      .side-header__box
        %p.side-header__box__uesr 
          = current_user.name
        %ul.side-header__box__uesr__group
          %li.side-header__box__uesr__group__meun
            = link_to new_group_path do
              =icon('fas', 'edit')
          %li.side-header__box__uesr__group__edit
            = link_to edit_user_path(current_user) do
              = icon('fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          %p.group__group-name 
            = group.name
          %p.group__latest-message 
            まだメッセージはありません